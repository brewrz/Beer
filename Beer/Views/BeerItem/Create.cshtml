@model Beer.Models.BeerItem

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Create", "BeerItem", FormMethod.Post, new { @class = "ym-form"}))
{
    @Html.ValidationSummary(true)
        <div class="ym-fbox-select">
          <label for="SubCategorys">Select the category: </label>
          @Html.DropDownList("SubCategoryID", String.Empty)
        </div>
        <div class="ym-fbox-text">
          <label for="your-id">Beer name</label>
          @Html.EditorFor(model => model.BeerItemName)
          @Html.ValidationMessageFor(model => model.BeerItemName)
        </div>
        <div class="ym-fbox-text">
          <label for="your-id">Comments</label>
          @Html.EditorFor(model => model.BeerItemComments)
            @Html.ValidationMessageFor(model => model.BeerItemComments)
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
